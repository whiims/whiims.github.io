include common
include member

mixin resi_section_header(title)
  header.resisection__header&attributes(attributes)
    h2.resisection__header--title=title

mixin resi_shop_link(title, intax, price, link)
  .resi_product_info&attributes(attributes)
    .resi_product_info__title= title
    if block
      block
    .resi_product_info__wrapper
      .resi_product_info__price
        .resi_product_info__intax= intax
        .resi_product_info__price_data= price
      .resi_product_info__link
        //- ここはあとで消す
        .resibutton.resibutton--shop
          .resibutton__text Coming soon！
        //- a(href=link).resibutton.resibutton--shop
          .resibutton__icon.resibutton__icon--shop
            +img('./images/resi-karuta/diode.svg')
          .resibutton__text ショップで購入

html(lang='ja')
